<Window x:Class="Corot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Corot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <Menu x:Name="MainMenu" DockPanel.Dock="Top">
            <MenuItem Header="_TownName"/>
            <MenuItem x:Name="populationHeader" Header="Population #2">
            </MenuItem>
            <MenuItem x:Name="foodHeader" Header="Food #5"/>
            <MenuItem  x:Name="dayHeader" Header="Day #1">
                <MenuItem Header="Next Day" Click="NextDay"/>
            </MenuItem>
            <MenuItem Header="_Exit" Click="Exit"/>
        </Menu>
    </Grid>
</Window>
