<Window x:Class="Corot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Corot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_TownName"/>
            <MenuItem Header="_People"/>
            <MenuItem Header="_Food"/>
            <MenuItem  x:Name="dayHeader" Header="_Day #1">
                <MenuItem Header="Next Day" Click="NextDay"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
