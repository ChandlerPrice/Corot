            <Button Grid.Column="9" Grid.Row="5">Button 8</Button>

            <Button Grid.Column="0" Grid.Row="6">Button 1</Button>
            <Button Grid.Column="1" Grid.Row="6">Button 2</Button>
            <Button Grid.Column="2" Grid.Row="6">Button 3</Button>
            <Button Grid.Column="3" Grid.Row="6">Button 4</Button>
            <Button Grid.Column="4" Grid.Row="6">Button 5</Button>
            <Button Grid.Column="5" Grid.Row="6">Button 6</Button>
            <Button Grid.Column="6" Grid.Row="6">Button 7</Button>
