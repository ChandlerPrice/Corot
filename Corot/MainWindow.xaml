                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0">Button 1</Button>
            <Button Grid.Column="1">Button 2</Button>
            <Button Grid.Column="2">Button 3</Button>
            <Button Grid.Column="3">Button 4</Button>
            <Button Grid.Column="4">Button 5</Button>
            <Button Grid.Column="5">Button 6</Button>
            <Button Grid.Column="6">Button 7</Button>
            <Button Grid.Column="7">Button 8</Button>
            <Button Grid.Column="8">Button 8</Button>
            <Button Grid.Column="9">Button 8</Button>

            <Button Grid.Column="0" Grid.Row="1">Button 1</Button>
            <Button Grid.Column="1" Grid.Row="1">Button 2</Button>
            <Button Grid.Column="2" Grid.Row="1">Button 3</Button>
            <Button Grid.Column="3" Grid.Row="1">Button 4</Button>
            <Button Grid.Column="4" Grid.Row="1">Button 5</Button>
            <Button Grid.Column="5" Grid.Row="1">Button 6</Button>
            <Button Grid.Column="6" Grid.Row="1">Button 7</Button>
            <Button Grid.Column="7" Grid.Row="1">Button 8</Button>
            <Button Grid.Column="8" Grid.Row="1">Button 8</Button>
            <Button Grid.Column="9" Grid.Row="1">Button 8</Button>

            <Button Grid.Column="0" Grid.Row="2">Button 1</Button>
            <Button Grid.Column="1" Grid.Row="2">Button 2</Button>
            <Button Grid.Column="2" Grid.Row="2">Button 3</Button>
            <Button Grid.Column="3" Grid.Row="2">
                <Image Source="Images/ResourceBuildingImage.png"/>
            </Button>
            <Button Grid.Column="4" Grid.Row="2">
                <Image Source="Images/HospitalBuildingImage.png"/>
