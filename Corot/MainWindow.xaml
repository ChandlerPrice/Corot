            <MenuItem x:Name="settingsHeader" Header="Settings" Click="settingsHeader_Click"/>
            <MenuItem x:Name="creditsHeader" Header="Credits" Click="creditsHeader_Click"/>
            <MenuItem Header="_Exit" Click="Exit"/>
        </Menu>
