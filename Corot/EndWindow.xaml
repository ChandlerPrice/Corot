<Window x:Class="Corot.EndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Corot"
        mc:Ignorable="d"
        Title="EndWindow" Height="450" Width="800">
    <Grid>
        <Image Source="/Images/CreditsBackground.jpg" Margin="-50"/>
        <TextBlock Text="GAME OVER" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" Opacity="0.8" Margin="50" FontFamily="Impact" FontSize="75" >
        </TextBlock>
        <Button x:Name="StartButton" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0, 0, 0, 175" Content=" PLAY AGAIN " Opacity="0.7" Foreground="White" Background="Black"  FontFamily="Impact" FontSize="50" MouseEnter="StartGame_MouseEnter" MouseLeave="StartGame_MouseLeave" Click="StartButton_Click">
        </Button>
        <Button x:Name="ExitButton" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0, 0, 0, 100" Content=" EXIT " Opacity="0.7" Foreground="White" Background="Black" FontFamily="Impact" FontSize="50" MouseEnter="Exit_MouseEnter" MouseLeave="Exit_MouseLeave" Click="ExitButton_Click">
        </Button>
    </Grid>
</Window>
